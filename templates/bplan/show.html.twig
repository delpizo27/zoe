{# templates/bplan/show.html.twig #}
{% extends "base.html.twig" %}

{% block title %}{{ bplan.title }}{% endblock %}

{% block body %}
		<article class="container">
		<div class="row">
			<div class="col s12 m12 l8 offset-l2">
				<h2>{{ bplan.title }}</h2>
				<span>{{ bplan.createdAt|date('d/m/Y') }}</span>
				<p>
					<img src="{{ asset('uploads/' ~ bplan.picture) }}" class="responsive-img">
				</p>
				<span class="categories">{% for category in bplan.categories %} {{ category.label }}{{ loop.last ? '' : ',' }} {% endfor %}</span>
			</div>
		</div>
		<div class="row">
			<div class="col s12 m12 l8 offset-l2">
				<p>
					{{ bplan.description }}
				</p>
			</div>
	</article>
{% endblock %}
